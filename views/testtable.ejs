<h1>CURD Operation Table List</h1>

<a href="/register"><button type="button">Insert User</button></a><br><br>

<table border="1" cellpadding="5" cellspacing="5">
	<tr>
		<th>SNo.</th>
		<th>UserName</th>
		<th>City</th>
		<th>Email</th>
		<th>Phone</th>
		<th>Edit</th>
		<th>Delete</th>
	</tr>

	<% if(data.length){
		for(var i=0; i<data.length; i++){ %>
		<tr>
			<td><%=(i+1)%></td>
			<td><%=data[i].name%></td>
			<td><%=data[i].city%></td>
			<td><%=data[i].email%></td>
			<td><%=data[i].phone%></td>
			<td><a href="/edit/<%=data[i].id%>">Edit</a></td>
			<td><a href="/delete/<%=data[i].id%>">Delete</a></td>
		</tr>
		<% 
		}
		} else { %>
			<tr>
				<td colspan="3">No User Found</td>
			</tr>
		<% } %>
</table>